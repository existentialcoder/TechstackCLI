{
  "name": "techstack-cli",
  "version": "1.0.4",
  "description": "CLI app for detecting technologies behind a company",
  "main": "src/index.js",
  "repository": "git@github.com:existentialcoder/TechstackCLI.git",
  "author": "existentialcoder <shravanayyappa@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "techstack",
    "technologies stack",
    "Technologies Stack",
    "Companies Tehnologies",
    "Wappalyzer",
    "wappalyzer-cli",
    "Wappalyzer Command Line",
    "wappalyzer cli"
  ],
  "bin": {
    "techstack": "./src/index.js"
  },
  "engine": {
    "node": "10"
  },
  "preferGlobal": true,
  "scripts": {
    "unit": "nyc jest --detectOpenHandles",
    "test": "yarn unit",
    "lint": "eslint -f table .",
    "dev": "node src"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": "airbnb-base",
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "rules": {}
      },
      {
        "files": [
          "*.spec.js"
        ],
        "rules": {
          "max-lines": [
            "error",
            1500
          ],
          "max-lines-per-function": [
            "error",
            1500
          ],
          "no-unused-expressions": "off",
          "no-empty-function": "off",
          "init-declarations": "off",
          "no-magic-numbers": "off",
          "func-names": "off",
          "semi": "off",
          "global-require": "off"
        }
      }
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "reporter": [
      "html",
      "text-summary",
      "text"
    ]
  },
  "eslintIgnore": [
    "node_modules/"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^6.0.0",
    "console-table-printer": "^2.2.6",
    "techstack-cli": "^1.0.4",
    "wappalyzer": "^6.2.1"
  },
  "devDependencies": {
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.2.2",
    "jest-mock-process": "^1.4.0",
    "nyc": "^15.1.0"
  }
}
